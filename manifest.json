{
  "manifest_version": 2,

  "name": "Seeking Alpha Login-wall Remover",
  "description": "This extension removes Seeking Alpha's login wall.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://seekingalpha.com/*",
        "https://seekingalpha.com/*"
      ],
      "js": [ "popup.js" ]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "http://seekingalpha.com/*",
    "https://seekingalpha.com/*"
  ]
}